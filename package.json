{
  "name": "chat",
  "version": "1.0.0",
  "description": "Basic chat",
  "keywords": [
    "chat",
    "websocket"
  ],
  "main": "main.js",
  "scripts": {
    "build.watch": "webpack --config webpack.dev.js --watch",
    "build.prod": "webpack --config webpack.prod.js",
    "coverage.check": "jest --coverage",
    "coverage.report": "cat ./coverage/lcov.info | codecov",
    "jest": "jest",
    "jest.watch": "npm run test -- --watch",
    "standard": "standard",
    "validate": "npm run standard && npm run coverage.check && npm run build.prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://jojoee@github.com/leopardd/chat.git"
  },
  "author": "Nathachai Thongniran <inid3a@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leopardd/chat/issues"
  },
  "homepage": "https://github.com/leopardd/chat#readme",
  "dependencies": {
    "debug": "^3.0.1",
    "dotenv": "^4.0.0",
    "faker": "^4.1.0",
    "uuid": "^3.1.0",
    "ws": "^3.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "codecov": "^3.7.1",
    "jest": "^21.0.1",
    "standard": "^10.0.3",
    "webpack": "^3.6.0",
    "webpack-merge": "^4.1.0"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  },
  "standard": {
    "verbose": true,
    "env": "jest",
    "globals": [
      "localStorage",
      "location",
      "WebSocket",
      "$"
    ]
  }
}
